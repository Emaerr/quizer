@model Quizer.Models.Lobbies.StatsViewModel
@{
    ViewData["Title"] = "Результаты викторины";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/quizResults.css" />
</head>
<body>
    <div class="quiz-results-container">
        <h1>Результаты викторины</h1>
        <table class="results-table">
            <thead>
                <tr>
                    <th>Эмоджи</th>
                    <th>Имя пользователя</th>
                    <th>Очки</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserPoints)
                {
                    if (string.IsNullOrWhiteSpace(user.Key))
                    {
                        // Пропускаем пользователя с null или пустым именем
                        continue;
                    }

                    var splitUserKey = user.Key.Split(new char[] { ']', '[' }, StringSplitOptions.RemoveEmptyEntries);
                    var emoji = splitUserKey.Length > 0 ? splitUserKey[0] + ".png" : "";  // Извлечение эмоджи и добавление расширения .png
                    var userName = splitUserKey.Length > 1 ? splitUserKey[1] : "";  // Извлечение имени пользователя

                    if (string.IsNullOrWhiteSpace(userName))
                    {
                        // Пропускаем пользователя с пустым именем после эмоджи
                        continue;
                    }

                    <tr>
                        <td>
                            <img src="/images/emojis/@emoji" alt="@emoji" style="max-width: 40px; max-height: 40px;" />
                        </td>
                        <td>@userName</td>
                        <td>@user.Value</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="actions">
            <a href="~/Home/Index" class="back-button">Вернуться на главную</a>
        </div>
    </div>
</body>
</html>
