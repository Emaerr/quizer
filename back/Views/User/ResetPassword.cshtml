

@{
    ViewData["Title"] = "Восстановление пароля";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/passwordRecovery.css" />
</head>
<body>
    <div class="password-recovery-container">
        <h1>Восстановление пароля</h1>
        <form method="post" action="~/Account/VerifySecurityQuestions">
            <div class="question">
                <label for="answer1">@Model.Question1</label>
                <input type="text" id="answer1" name="Answer1" placeholder="Введите ваш ответ" required />
            </div>
            <div class="question">
                <label for="answer2">@Model.Question2</label>
                <input type="text" id="answer2" name="Answer2" placeholder="Введите ваш ответ" required />
            </div>
            <div class="question">
                <label for="answer3">@Model.Question3</label>
                <input type="text" id="answer3" name="Answer3" placeholder="Введите ваш ответ" required />
            </div>
            <div class="actions">
                <button type="submit" class="submit-button">Подтвердить</button>
            </div>
        </form>
    </div>
</body>
</html>

